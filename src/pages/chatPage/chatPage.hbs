<div class="{{class.chat}}">
  <div class="{{class.chat-list}}">
    <div class="{{class.link-to-profile}}">
      <a href="#/profile">
        Профиль
      </a>
    </div>

    <div class="{{class.search-bar}}">
      <input type="text" class="{{class.search-input}}" placeholder="Поиск">
    </div>

    <div class="{{class.list-wrapper}}">
      <div class="{{class.list-body}}">

        {{#each chatList}}
        <div class="{{../class.item}}">
          <div class="{{../class.item__avatar}}">
            <div class="{{../class.item__avatar-icon}}">
              {{#if imageLink}}
                <img src="{{imageLink}}" alt="{{user.name}}">
              {{else}}
                <div class="{{../class.item__avatar-stub}}"></div>
              {{/if}}
            </div>
          </div>

          <div class="{{../class.item__details}}">
            <div class="{{../class.item__details-top}}">
              <span class="{{../class.item__name}}">
                {{userName}}
              </span>
              <span class="{{../class.item__date}}">
                {{chatDate}}
              </span>
            </div>

            <div class="{{../class.item__details-bottom}}">
              <div class="{{../class.item__message}}">
                {{#if messagePrefix}}
                <b class="{{../class.item__message-prefix}}">Вы: </b>
                {{/if}}
                <span class="{{../class.messageText}}">{{messageText}}</span>
              </div>
              {{#if unreadAmount}}
              <div class="{{../class.item__unread}}">
                {{unreadAmount}}
              </div>
              {{/if}}
            </div>
          </div>

        </div>
        {{/each}}

      </div>
    </div>
  </div>
  <div class="{{class.chat-window}}">
    <div class="{{class.chat-top}}">
      <div class="{{class.user}}">
        <div class="{{class.user__avatar}}">
          <span></span>
        </div>

        <div class="{{class.user__name}}">
          Вадим
        </div>
      </div>
      
      <button class="{{class.chat-burger}}">
        <span></span>
        <span></span>
        <span></span>
      </button>

    </div>

    <div class="{{class.messages}}">
      {{#each chatMessages}}
      <div class="{{../class.messages__date}}">
        {{date}}
      </div>

      <div class="{{../class.messages__list}}">
        {{#each messages}}
        <div class="{{../../class.messages__item-layout}}{{#if outgoing}} {{../../class.messages__item-layout--outgoing}}{{/if}}">
          <div class="{{../../class.messages__item}}{{#if image}} {{../../class.messages__item--image}}{{/if}}{{#if outgoing}} {{../../class.messages__item--outgoing}}{{/if}}">
            
            {{#if image}}
              <img class="{{../../class.messages__item-image}}" src="{{image}}" alt="Image">
            {{/if}}

            <div class="{{../../class.messages__item-text}}">
              
              {{text}}

              <span class="{{../../class.messages__item-date}}">
                {{#if outgoing}}
                  <span class="{{../../class.messages__item-status}}{{#if readed}} {{../../class.messages__item-status--readed}}{{/if}}"></span>
                {{/if}}
                {{date}}
              </span>
            </div>
            
          </div>
        </div>
        {{/each}}
      </div>
      {{/each}}
    </div>

    <form class="{{class.chat-bottom}}">
      <span class="{{class.attach-button}}"></span>

      <label class="{{class.message-field}}">
        <input type="text" placeholder="Собщение" name="message" id="message">
      </label>

      <button class="{{class.send-button}}"></button>
    </form>
  </div>
</div>
